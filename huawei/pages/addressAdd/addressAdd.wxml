<!-- 信息部分开始 -->
<form bindsubmit="formSubmit" report-submit="true">
<view class="info">
   <view class="item">
     <text>收货人</text>
      <view class="right">
         <input type="text" name="name" placeholder="收货人姓名" focus="{{focus}}" />
      </view>
   </view>

   <view class="item">
     <text>手机号码</text>
     <view class="right">
         <input name="tel" type="number" placeholder="收货人电话" focus="{{focus}}" />
     </view>
   </view>

   <view class="item">
      <text>所在地区</text>
      <view class="right">
        <picker name="addre" class="addre" value="{{addreValue}}" range="{{addreRange}}" bindchange="addrePickerBindchange"> {{addreRange[addreValue]}}
        </picker>
     </view>
   </view>

   <view class="item">
      <text>详细地址</text>
        <view class="right">
         <input name="door" type="text" placeholder="请输入小区/门牌号/楼层" focus="{{focus}}" />
        </view>
   </view>

</view>
 <button class="save" formType="submit">保存并使用</button>
</form>