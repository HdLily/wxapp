page {  
    display: block;  
    min-height: 100%;  
    background-color:#eee;
    font-size: 30rpx;
    color:#333;
    position: relative;
  } 
  .info{
    background-color: #fff;
  }
  .item{
    height:90rpx;
    align-items: center;
    display:flex;
    margin-left:30rpx;
    border-bottom:1rpx solid #eee;
  }
  
  input placeholder{
    color:red;
  }
  .area{
    width:150rpx;
    border:1rpx solid #939393;
  }
  button{
    width:92%;
    margin-top:30rpx;
  }
  .remind{
    padding-top: 6rpx;
    color:#e64340;
    font-size:20rpx;
  }
  .save{
    background-color: #CA141D;
    color:#fff;
  }
  .right{
    padding-left: 30rpx;
    width:75%;
    display:flex;
  }
  input{
    width:100%;
  }
  
  