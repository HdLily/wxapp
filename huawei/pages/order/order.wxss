  page {  
    min-height: 100%;  
    background-color:#eee;
    font-size: 30rpx;
    color:#333;
    width:100%;
  } 
  .section{
      margin-top: 5rpx;
      background-color: #fff;
  }
  .addre1{
      padding-left:30rpx;
      display: flex;
      justify-content: space-between;
      padding-top:30rpx;
      line-height:100rpx;
  }
  .addre2{
     line-height:60rpx;
     font-size:27rpx;
  }
  .addre2 .left{
      display: flex;
      flex-direction: column;
      width:90%;
  }
  .addre2 .left .area{
      float:right;
  }
  .addre2 .left_bottom{
      padding-left:40rpx;
      color:#888;
  }
  .left_top image{
      padding-top:10rpx;
      margin-right:10rpx;
  }
  .more{
    width:25rpx;
    float:right;
    margin-right:20rpx;
    padding-top:40rpx;
  }
   image{
      width:30rpx;
  }
  .line image{
      width:100%;
      height:10rpx;
  }
  .right{
      display:flex;
  }

  .product_invoice{
      border-top: 10rpx solid #eee;
      display: flex;
      align-items: center;
      padding: 30rpx;
      height: 40rpx;
      border-bottom: 10rpx solid #eee;
      position: relative;
  }
  .product_invoice .invoice_name{
      flex:1;
      color: #333333;
      font-size: 28rpx;
  }
  .product_invoice .invoice_category{
      color: #888;
      width: 80rpx;
      text-align-last: left;
      font-size: 28rpx;
  }
  .product_invoice image{
      width: 28rpx;
      height: 28rpx;
  }
  .orderInfo .send{
      padding: 5rpx 20rpx;
      height: 50rpx;
      display: flex;
      align-items: center;
      border-bottom: 2rpx solid #eee;
  }
  .send image{
      width: 40rpx;
      height: 40rpx;
      margin-right: 10rpx;
  }
  .send text{
      flex: 1;
      font-size: 30rpx;
      font-weight: bold;
      color: #333333;
  }
  .product-info{
      display: flex;
      padding: 15rpx 30rpx;
      align-items: center;
      font-size: 24rpx;
      color: #333333;
      border-bottom: 5rpx solid #eee;
  }
  .product-info image{
      width: 100rpx;
      height: 100rpx;
  }
  .product-info .product_name{
      margin-left: 20rpx;
      width: 380rpx;
  }
  .product-info .num{
      flex: 1;
      font-size: 24rpx;
      color: #888;
  }
  .fare{
      display: flex;
      padding: 30rpx;
      font-size: 24rpx;
      color: #333333;
      border-bottom: 1px solid #eee;
  }
  .fare .fare_title{
      flex: 1;
  }
  .discount,.total{
      color: #333333;
      font-size: 24rpx;
  }
  .discount .discount_name,.total .total_title{
      display: inline-block;
      width: 500rpx; 
      text-align: right;
  }
  .discount .desc,.total .total_price{
      float: right;
      margin-right: 30rpx;
  }
  .discount{
      padding-top: 30rpx;
      padding-bottom: 20rpx;
  }
  .total{
      padding-bottom: 30rpx;
      border-bottom: 10rpx solid #eee;
  }
  .discount .discount_name{
      font-size: 28rpx;
  }
  .total .total_price{
      font-size: 30rpx;
      color:#CA141D;
  }
  .ticket{
      padding: 30rpx;
      font-size: 30rpx;
      font-weight: bold;
      border-bottom: 2rpx solid #eee;
  }
  .ticket text{
      margin-left: 10rpx;
      font-size: 24rpx;
      font-weight: normal;
      color: #888888;
     
  }
  .use-ticket{
      display: flex;
      padding: 30rpx;
  }
  .use-ticket image{
      width: 40rpx;
      height: 40rpx;
  }
  .use-ticket text{
      flex: 1;
      font-size: 28rpx;
      margin-left: 10rpx;
  }
  .tabBar{
      position: fixed;
      bottom: 0;
      left: 0;
      display: flex;
      align-items: center;
      /* padding:30rpx; */
      width: 100%;
      background: #ffffff;
      height: 100rpx;
      line-height: 100rpx;
  }
  .tabBar .total_pay{
      width: 50%;
      text-align: right;
      font-size: 24rpx;
  }
  .tabBar .price{
      font-size: 30rpx;
      color: #CA141D;
      font-weight: bold;
      width: 23%;
  }
  .tabBar .button{
      width: 27%;
      background: #CA141D;
      color: #ffffff;
      font-size: 30rpx;
      text-align: center;
  }


  

  
  

