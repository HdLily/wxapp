page{
  background: #ededed;
}
swiper{
  height: 400rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
} 
.categroy-top{
  background:#fff;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.categroy-top .product-list{ 
  display: inline-block;
  width: 25%;
  text-align: center;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  line-height: 60rpx;
}
.categroy-top .on{
  color: #D03038;
}
/* .categroy-bottom{
  height: 700rpx;
} */
.categroy-bottom .theme{
  background: #ffffff;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 32rpx;
  padding-left: 30rpx;
}
.categroy-bottom .product{
   margin-top: 10rpx;
   margin-left: 15rpx;
}
.product .product-list{
  width: 355rpx;
  height: 355rpx;
  display: inline-block;
  position: relative;
  background: #fff;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
}
.product .product-list .name{
  position: absolute;
  left: 30rpx;
  top: 26rpx;
  font-size: 24rpx;
  /* width: 256.88rpx;
  height: 32.5rpx; */
}
.product .product-list .price{
  position: absolute;
  left: 30rpx;
  top: 80rpx;
  background: #CA141D;
  width: 110rpx;
  height: 28rpx;
  font-size: 22rpx;
  color: #ffffff;
  text-align: center;
}
.product .product-list::after{
  content:'>';
  width: 28rpx;
  line-height: 28rpx;
  height: 28rpx;
  background:#CA141D;
  position: absolute;
  left: 141rpx;
  top: 80rpx;
  font-size: 24rpx;
  text-align: center;
  color: #ffffff;
  font-weight: lighter;
}
.product .product-list .desc{
  position: absolute;
  left: 30rpx;
  top: 110rpx;
  font-size: 18rpx;
  border: 1px solid #CA141D;
  color:#CA141D;
}
.product .product-list image{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  right: 25rpx;
  bottom: 20rpx;
}
