<view wx:if="{{showList}}">
    <view wx:for="{{userOrderList}}" wx:key="{{index}}">
        <view class="order-mate-area bg_white" data-index="{{index}}">
            <view class="order-mate-header ui-border-b">
                <view class="order-number">订单号：{{item.orderCode}}</view>
                <view class="order-time">{{item.orderTime}}</view>
            </view>
            <navigator class="sys-good-area" hoverClass="navigator-hover" url="../orderDetail/orderDetail?orderCode={{item.orderCode}}" wx:for="{{item.productList}}" wx:key="{{index}}">
                <view>
                    <view class="sys-good-item">
                        <view class="good-panels">
                            <view class="good-img" wx:if="{{item.photoName}}">
                                <image src="{{cdnPath}}{{item.photoPath}}428_428_{{item.photoName}}"></image>
                            </view>
                            <view class="good-info">
                                <view class="good-name">
                                    <text>{{item.name}}</text>
                                </view>
                                <view class="good-price-num">
                                    <view class="good-price">¥{{item.salePrice}}</view>
                                    <view class="good-num">x{{item.quantity}}</view>
                                </view>
                            </view>
                        </view>
                    </view>
                    <view class="sys-good-item" wx:for="{{item.prdGiftList}}" wx:key="{{index}}">
                        <view class="good-panels">
                            <view class="good-icon">
                                <image src="../../imgs/icon_gift.png"></image>
                            </view>
                            <view class="good-img" wx:if="{{item.photoName}}">
                                <image src="{{cdnPath}}{{item.photoPath}}428_428_{{item.photoName}}"></image>
                            </view>
                            <view class="good-info">
                                <view class="good-name">
                                    <text>{{item.giftName}}</text>
                                </view>
                                <view class="good-price-num">
                                    <view class="good-price">
                                        <text class="good-order-price"></text>
                                    </view>
                                    <view class="good-num">x{{item.giftQuantity}}</view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </navigator>
            <view class="order-mate-footer">
                <view class="order-mate-cont">
                    <view class="price">金额：
              <text class="price-text">¥{{item.cashPay}}</text>
                        <text class="gray">共 {{item.productTotalCount}} 件商品</text>
                    </view>
                    <view class="state">状态：
              <text class="red">{{item.orderStatusStr}} | {{item.paymentStatusStr}}</text>
                    </view>
                </view>
                <view class="order-mate-action">
                    <view bindtap="goTobuy" class="button-style-1" data-cashPay="{{item.cash}}" data-code="{{item.orderCode}}" wx:if="{{item.goPay}}">
                        <text>去付款</text>
                    </view>
                    <navigator class="button-style-3" hoverClass="navigator-hover" url="../logisticsDetail/logisticsDetail?orderCode={{item.orderCode}}" wx:if="{{item.gologistic}}">
                        <text>查物流</text>
                    </navigator>
                </view>
            </view>
        </view>
    </view>
    <view wx:if="{{loadMore}}">
        <view bindtap="onToast" class="loading">
            <image src="../../imgs/icon_pull.png"></image>
            <text class="more-loading">上拉加载更多订单</text>
        </view>
        <view class="loading" wx:if="{{loading}}">
            <image src="../../imgs/loading.gif"></image>
        </view>
    </view>
    <view class="buttonMore loading" wx:if="{{totalList}}">
        <text class="loading-end">已加载全部订单</text>
    </view>
</view>
<view class="system-empty" wx:if="{{!noLogin&&userOrderList.length==0}}">
    <view class="system-empty-cont">
        <view class="system-empty-icon">
            <image src="imgs/empty-order.png"></image>
        </view>
        <view class="system-empty-tip">
            <text>未在小程序下过订单哦</text>
        </view>
        <view class="system-empty-btn">
            <navigator class="button-style-3" openType="switchTab" url="../index/index">
                <text>随便逛逛</text>
            </navigator>
        </view>
    </view>
</view>
