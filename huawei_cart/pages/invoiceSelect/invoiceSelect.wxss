.invoice-type {
    margin-top: 13rpx;
}

.invoice-header {
    font-size: 27rpx;
    line-height: 73rpx;
    height: 73rpx;
    padding: 0 34rpx;
}

.invoice-type-list {
    padding: 13rpx 34rpx;
    flex-wrap: wrap;
}

.invoice-type-list .checkbox-text {
    margin-right: 32rpx;
}

.invoice-type-list .checkbox-text.checkbox-text-hide {
    display: none;
}

.invoice-tab {
    margin-top: 13rpx;
}

.invoice-form-area {
    padding: 0 34rpx;
}

.invoice-list {
    height: 84rpx;
    border-bottom: 0;
    border-top: 3rpx solid #eaeaea;
}

.invoice-list:first-of-type {
    border-top: 0;
}

.invoice-identify {
    padding-left: 59rpx;
}

.invoice-list.hide {
    display: none;
}

.invoice-list .radiobox {
    padding-right: 21rpx;
}

.invoice-list .invoice-cont {
    font-size: 28rpx;
}

.invoice-list .invoice-cont .invoice-title {
    padding-right: 32rpx;
    display: block;
}

.invoice-list .invoice-cont input {
    position: relative;
    top: 3rpx;
}

.invoice-tab-gray .red {
    color: #333;
}

.invoice-tab .tips {
    padding: 27rpx 34rpx 0 34rpx;
    font-size: 23rpx;
    color: #888;
    background-color: #eee;
}

.form-select-area {
    font-size: 27rpx;
    height: 84rpx;
}

.form-select-area view {
    padding: 0 11rpx;
    line-height: 84rpx;
    margin-right: 21rpx;
}

.form-select-area view.current {
    color: #ca141d;
    position: relative;
}

.form-select-area view.current:after {
    content: '';
    height: 5rpx;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ca141d;
}

.current-box {
    position: absolute;
    left: 34rpx;
    right: 34rpx;
    top: 86rpx;
    bottom: 84rpx;
    overflow-y: scroll;
}

.current-box .current-list {
    padding: 11rpx 0;
}

.current-box .current-list view {
    font-size: 27rpx;
    padding: 21rpx 0;
}