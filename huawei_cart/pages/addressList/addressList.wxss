.address-list {
}

.address-list .address-item {
    padding: 25rpx 34rpx;
    position: relative;
}

.address-list .address-item:after {
    content: '';
    position: absolute;
    left: 34rpx;
    right: 34rpx;
    bottom: 0;
    border-bottom: 1px solid #eaeaea;
}

.address-list .address-item:nth-last-child(1):after {
    content: '';
    border-bottom: 0;
}

.address-item .address-default {
    width: 75rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.address-item .address-default image {
    width: 75rpx;
    height: 30rpx;
}

.address-item label {
    display: -ms-flexbox;
    display: box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    -webkit-box-flex: 1;
    flex-shrink: 1;
    overflow: hidden;
}

.address-item label .radiobox {
    padding-right: 21rpx;
    -webkit-box-flex: 0;
    flex-shrink: 0;
    overflow: hidden;
}

.address-item label .address-cont {
    width: 100%;
    word-break: break-all;
    -webkit-box-flex: 1;
    flex-shrink: 1;
    overflow: hidden;
}

.address-item label .addr-user {
    font-size: 28rpx;
}

.address-item label .addr-user-name {
    font-weight: bold;
    padding-right: 21rpx;
}

.address-item label .addr-info {
    font-size: 25rpx;
    line-height: 1.3;
    padding-top: 11rpx;
}

.address-item label .address-btn {
    width: 38rpx;
    height: 38rpx;
    padding: 15rpx;
    margin-left: 34rpx;
    margin-right: -15rpx;
    -webkit-box-flex: 0;
    flex-shrink: 0;
    overflow: hidden;
}

.address-item label .address-btn image {
    width: 38rpx;
    height: 38rpx;
    display: block;
}

.button-area-3 .button-flex view {
    display: inline-block;
    position: relative;
}

.button-area-3 .button-flex icon {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    left: -44rpx;
    top: 50%;
    margin-top: -16rpx;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100%;
}